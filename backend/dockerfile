
FROM python:3.11-slim AS base

# Variáveis de ambiente
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ==================================
# Stage: Dependencies
# ==================================
FROM base AS dependencies

WORKDIR /app

# Copiar requirements
COPY requirements.txt .

# Instalar dependências Python
RUN pip install --no-cache-dir -r requirements.txt

# ==================================
# Stage: Runtime
# ==================================
FROM base AS runtime

WORKDIR /app

# Copiar dependências instaladas
COPY --from=dependencies /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=dependencies /usr/local/bin /usr/local/bin

# Copiar código da aplicação
COPY . .

# ⚠️ IMPORTANTE:
# Não usamos USER appuser — vamos rodar como root para permitir porta 80.

# Liberar porta 80 (EXPOSE não abre firewall, só documentação)
EXPOSE 80

# Health check usado pelo ECS + ALB
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:80/health || exit 1

# Comando para iniciar o servidor
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80", "--workers", "2"]
